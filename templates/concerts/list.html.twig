{% extends 'base.html.twig' %}

{% block title %} All The Concerts {% endblock %}

{% block body %}
    <div class="container">
        {% for concert in concerts %}
            <div>
                <a href="{{ path('concert_show' , {id: concert.getId()}) }}">
                    {{ concert.getConcertName() }}
                </a>
            </div>
        {% endfor %}

        <div>
            <a href="{{ path('concert_create') }}">
                Create new concert
            </a>
        </div>
    </div>
{% endblock %}