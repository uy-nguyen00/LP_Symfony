{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <div class="container">
        <h1>Artist</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ artist.artistTag }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.artistName }}</td>
            </tr>
            <tr>
                <th>Crew</th>
                <td>{{ artist.band.bandName }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>
                    <img src="{{ asset('images/artists/' ~ artist.picture) }}" class="img-thumbnail"
                         alt="{{ artist.artistTag }}" style="width: 10rem">
                </td>
            </tr>
            </tbody>
        </table>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_artist_index') }}">back to list</a>

            <a href="{{ path('app_artist_edit', {'id': artist.id}) }}">edit</a>

            {{ include('artist/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
